{
  "compilerOptions": {
    "strictPropertyInitialization": false, // for DTOs
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "declaration": true,
    "noEmit": true,
    "paths": {
      "next/*": ["./test/node_modules/next/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["packages/**/*.ts", "packages/**/*.mts", "scripts/*.ts", "*.js", "*.mjs", "test/*.js", "jest.config.mjs"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
