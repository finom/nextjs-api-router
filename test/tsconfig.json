{
  "extends": "../tsconfig.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "packages/**/*.ts",
    "vovk.config.cjs",
    "next.config.mjs",
    "postcss.config.cjs"
  ],
  "compilerOptions": {
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "vovk/*": ["../packages/vovk/*"],
      "vovk-cli/*": ["../packages/vovk-cli/*"],
      "vovk-validate-client-ajv/*": ["../packages/vovk-validate-client-ajv/*"],
      "next/*": ["./node_modules/next/*"]
    },
  }
}
